@page
@model FinalProject.Pages.Compose_New_Email.ComposeMailModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Compose Email</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #900;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
        }

        .container {
            text-align: right;
            width: 100%;
            max-width: 800px;
            padding: 0 20px;
            margin-bottom:70px
        }

        h1 {
            color: white;
            margin-bottom: 40px;
            font-size: 30px;
            text-align:center;
            
        }

        .form-group {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 20px;
            
        }

            .form-group label {
                width: 30%;
                text-align: right;
                margin-right: 5px;
            }

            .form-group input, .form-group textarea {
                font-family: Arial, sans-serif;
                border: 1px solid white;
                background: #fff;
                color: #000;
                margin-left: 20px;
                width: 800px;
                box-sizing: border-box;
                max-width: 100%;
            }

        input[type="text"] {
            height: 2em;
        }

        textarea {
            resize: none;
        }

        

        .button-group button {
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
            margin-left: 10px;
        }

        .btn-send {
            background: #28a745; /* Green background */
            color: white;
        }

            .btn-send:hover {
                background: #218838; /* Darker green on hover */
            }

        .btn-home {
            background: #1a73e8; /* Blue background */
            color: white;
        }

            .btn-home:hover {
                background: #135ab7; /* Darker blue on hover */
            }

        .error-message{
            margin-bottom:20px;
        }
        </style>
    <script>
        function wrapText(textArea) {
            const maxLineLength = 80;
            let lines = textArea.value.split("\n");
            for (let i = 0; i < lines.length; i++) {
                if (lines[i].length > maxLineLength) {
                    let j = maxLineLength;
                    while (j > 0 && lines[i][j] != ' ') j--;
                    if (j > 0) {
                        let line = lines[i].slice(0, j);
                        let next = lines[i].slice(j + 1);
                        lines[i] = line;
                        lines.splice(i + 1, 0, next);
                    }
                }
            }
            textArea.value = lines.join("\n");
        }
    </script>
</head>
<body>
    <div class="container">
        <h1 style="margin-left:10px">SENDING EMAIL</h1>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error-message">@Model.ErrorMessage</div>
        }
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="success-message">@Model.SuccessMessage</div>
        }
        <form method="post">
            <div class="form-group">
                <label for="TO">To:</label>
                <input type="text" id="TO" name="TO" maxlength="40" rows="1" required />
            </div>
            <div class="form-group">
                <label for="SUBJECT">Subject:</label>
                <input type="text" id="SUBJECT" name="SUBJECT" maxlength="80" rows="1" required />
            </div>
            <div class="form-group">
                <label for="MESSAGE" style="margin-bottom:215px">Message:</label>
                <textarea id="MESSAGE" name="MESSAGE" rows="15" wrap="hard" style="overflow:hidden" oninput='wrapText(this)' required></textarea>
            </div>
            <div class="button-group">
                <button type="submit" class="btn-send">Send</button>
                <button type="button" class="btn-home" onclick="location.href='/Index'">Home</button>
            </div>

        </form>
    </div>
</body>
</html>
